<!DOCTYPE html>
<html>
<head>
  <title>Groups</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: #f0f2f5;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      text-align: center;
      overflow: hidden;
    }
    .visit-count {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 1.2em;
      color: #333;
      background-color: #fff;
      padding: 10px;
      border-radius: 5px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .blurred {
      filter: blur(5px);
      pointer-events: none;
    }
    .button-container {
      margin-bottom: 20px;
    }
    .toggle-button, .home-button {
      padding: 10px 20px;
      font-size: 1.2em;
      color: white;
      background-color: #201f1f;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
      margin: 5px;
    }
    .toggle-button:hover, .home-button:hover {
      background-color: #2a2828;
    }
    .cards-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      width: 100%;
      max-width: 1200px;
      margin-bottom: 50px; /* Add margin at the bottom for future content */
    }
    .container {
      perspective: 1000px;
      display: inline-block;
      margin: 15px;
    }
    .card {
      width: 200px; /* Adjusted for better fitting */
      height: 280px; /* Adjusted for better fitting */
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s, width 0.6s, height 0.6s;
    }
    .card.flipped {
      transform: rotateY(180deg);
    }
    .card.zoomed {
      transform: scale(2) translate(-50%, -50%);
      position: fixed;
      top: 50%;
      left: 50%;
      z-index: 1000;
    }
    .card .front, .card .back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      border-radius: 8px;
      top: 0;
      left: 0;
    }
    .card .front {
      background: #ff7e5f; /* Updated to use solid color */
      z-index: 2;
      transform: rotateY(0deg);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      color: white;
    }
    .card .front img {
      max-width: 100px;
      max-height: 100px;
      margin-bottom: 15px;
      box-shadow: 0 0 10px 3px rgba(255, 255, 255, 0.7); /* White shadow */
    }
    .card .back {
      background-color: white;
      transform: rotateY(180deg);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      color: black;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border: 1px solid #ccc;
    }
    .card h2 {
      font-size: 1.3em;
      margin: 13px 0;
      padding: 0;
    }
    .card p {
      font-size: 1em;
      margin: 6.5px 13px;
    }
    p.goal-desc {
      font-size: smaller;
    }
    .class-code {
      position: absolute;
      bottom: 20px;
      font-size: 1.2em;
      color: #201f1f;
      background-color: #fff;
      padding: 10px;
      border-radius: 5px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .main-title {
      text-align: center;
      margin-bottom: 20px;
    }
    .main-title h1 {
      font-size: 2.5em;
      color: #201f1f;
      margin: 5px 0;
    }
    .main-title h2 {
      font-size: 1.8em;
      color: #201f1f;
      margin: 5px 0;
    }
    .main-title h3 {
      font-size: 1.5em;
      color: #201f1f;
      margin: 5px 0;
    }
    .like-dislike {
      display: flex;
      justify-content: center;
      margin-top: 10px;
    }
    .like-dislike img {
      width: 24px;
      height: 24px;
      margin: 0 10px;
      cursor: pointer;
      transition: transform 0.2s;
    }
    .like-dislike img:hover {
      transform: scale(1.2);
    }
  </style>
</head>
<body>
  <div class="main-title">
    <h1>Future Of Work</h1>
    <h2>Sustainability Innovation Camp</h2>
    <h3>Groups</h3>
  </div>
  <div class="button-container">
    <button class="toggle-button" onclick="toggleFlip()">Flip Card</button>
    <button class="home-button" onclick="window.location.href='/'">Home</button>
  </div>
  <div class="visit-count">
    Visits: <%= visitCount %>
  </div>
  <div class="cards-grid">
    <% groups.forEach((group, index) => { %>
      <div class="container">
        <div class="card" id="card-<%= index %>">
          <div class="front" style="background: <%= group.problem.color %>;">
            <% if (group.problem && group.problem.SDG) { %>
              <img src="https://raw.githubusercontent.com/favourch/sdg-logos/main/<%= group.problem.SDG %>.png" alt="SDG Logo">
            <% } %>
          </div>
          <div class="back">
            <h2><%= group.name %></h2>
            <% if (group.problem) { %>
              <p><%= group.problem.problem_statement %></p>
              <p class="goal-desc"><strong>Goal:</strong> <%= group.problem.goalTitle %></p>
            <% } else { %>
              <p>No problem assigned</p>
            <% } %>
            <div class="like-dislike">
              <img src="https://img.icons8.com/ios-filled/50/000000/facebook-like.png" alt="Like" onclick="likeCard(<%= index %>)">
              <img src="https://img.icons8.com/ios-filled/50/000000/thumbs-down.png" alt="Dislike" onclick="dislikeCard(<%= index %>)">
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  <div class="class-code">
    Class Code: <%= code %>
  </div>
  <script>
    function toggleFlip() {
      const cards = document.querySelectorAll('.card');
      cards.forEach(card => {
        card.classList.toggle('flipped');
      });
    }

    document.querySelectorAll('.card').forEach(card => {
      // card.addEventListener('mouseover', handleMouseOver);
      // card.addEventListener('mouseleave', handleMouseLeave);
    });

    function handleMouseOver(event) {
      const card = event.currentTarget;
      if (card.classList.contains('flipped')) {
        card.classList.add('zoomed');
        document.querySelectorAll('.card:not(.zoomed)').forEach(c => {
          c.classList.add('blurred');
        });
      }
    }

    function handleMouseLeave(event) {
      const card = event.currentTarget;
      card.classList.remove('zoomed');
      document.querySelectorAll('.card').forEach(c => {
        c.classList.remove('blurred');
      });
    }

    function likeCard(index) {
      const code = '<%= code %>';
      fetch(`/like/${code}/${index}`, {
        method: 'POST'
      }).then(response => {
        if (response.ok) {
          alert('Liked!');
        } else {
          alert('Error liking the card.');
        }
      });
    }

    function dislikeCard(index) {
      const code = '<%= code %>';
      fetch(`/dislike/${code}/${index}`, {
        method: 'POST'
      }).then(response => {
        if (response.ok) {
          alert('Disliked!');
        } else {
          alert('Error disliking the card.');
        }
      });
    }
  </script>
</body>
</html>
